import React, { PropsWithChildren } from "react";
import { InputProps } from "./types/inputProps.type";
import { StyledInput } from "./style/input.style";

/** Utility type for self-typed React components */
export type SelfFC<P = {}> = React.FC<PropsWithChildren<P>> & {
  /** Additional self-typed metadata for the component (e.g., displayName) */
  displayName?: string;
};

export const Input: SelfFC<InputProps> = ({
  value,
  placeholder,
  inputSize = "medium",
  onChange,
  className,
  ...props
}) => {
  return (
    <StyledInput
      type="text"
      value={value}
      placeholder={placeholder}
      inputSize={inputSize}
      onChange={onChange}
      className={className}
      {...props}
    />
  );
};

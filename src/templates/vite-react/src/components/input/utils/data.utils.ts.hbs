import { InputProps } from "../types/inputProps.type";

// Helper functions for dynamic styles
export const getPadding = (size: InputProps["inputSize"]) => {
  switch (size) {
    case "small":
      return "6px 8px";
    case "medium":
      return "8px 12px";
    case "large":
      return "10px 16px";
    default:
      return "8px 12px";
  }
};

export const getFontSize = (size: InputProps["inputSize"]) => {
  switch (size) {
    case "small":
      return "13.33px";
    case "medium":
      return "16px";
    case "large":
      return "19.2px";
    default:
      return "16px";
  }
};
